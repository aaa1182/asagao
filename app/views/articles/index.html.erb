<% @page_title = 'ニュース一覧' %>
<h1><%= @page_title %></h1>

<% if @articles.present? %>
  <% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p>
      <%= trancate(article.body, length: 80) %>
      <%= link_to 'もっと読む', article %>
    </p>
    <div>
      <%= article.released_at.strftime("%Y/%m/%d %H:%M") %>
    </div>
  <% end %>
<% else %>
  <p>ニュースがありません。</p>
<% end %>
